<Window x:Class="WpfApp3.VitalSignsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="Vital Signs" Height="400" Width="600">
    
    <Border Background="#E6F7FF" 
            BorderBrush="#A0CFEF" 
            BorderThickness="2" 
            CornerRadius="8" 
            Padding="20" 
            Width="500"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
        <StackPanel>
            <!-- Title -->
            <TextBlock Text="Current Vital" 
                       FontWeight="Bold" 
                       FontSize="20"
                       Margin="0,0,0,20"/>
            
            <!-- First Row: Temperature and Pulse Rate -->
            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Temperature -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Temperature" 
                               Margin="0,0,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" 
                                 Text="36.5" 
                                 Padding="5,3"/>
                        <TextBlock Grid.Column="1" 
                                   Text="Â°C" 
                                   VerticalAlignment="Center" 
                                   Margin="5,0,0,0"/>
                    </Grid>
                </StackPanel>
                
                <!-- Pulse Rate -->
                <StackPanel Grid.Column="1" Margin="20,0,0,0">
                    <TextBlock Text="Pulse Rate" 
                               Margin="0,0,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" 
                                 Text="72" 
                                 Padding="5,3"/>
                        <TextBlock Grid.Column="1" 
                                   Text="bpm" 
                                   VerticalAlignment="Center" 
                                   Margin="5,0,0,0"/>
                    </Grid>
                </StackPanel>
            </Grid>
            
            <!-- Second Row: Weight and BMI -->
            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Weight -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Weight" 
                               Margin="0,0,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" 
                                 Text="230" 
                                 Padding="5,3"/>
                        <TextBlock Grid.Column="1" 
                                   Text="lbs" 
                                   VerticalAlignment="Center" 
                                   Margin="5,0,0,0"/>
                    </Grid>
                </StackPanel>
                
                <!-- BMI -->
                <StackPanel Grid.Column="1" Margin="20,0,0,0">
                    <TextBlock Text="BMI" 
                               Margin="0,0,0,5"/>
                    <TextBox Text="30.34" 
                             Padding="5,3"/>
                </StackPanel>
            </Grid>
            
            <!-- Third Row: Blood Pressure and Sugar Level -->
            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Blood Pressure -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Blood Pressure" 
                               Margin="0,0,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" 
                                 Text="120/80" 
                                 Padding="5,3"/>
                        <TextBlock Grid.Column="1" 
                                   Text="mm hg" 
                                   VerticalAlignment="Center" 
                                   Margin="5,0,0,0"/>
                    </Grid>
                </StackPanel>
                
                <!-- Sugar Level -->
                <StackPanel Grid.Column="1" Margin="20,0,0,0">
                    <TextBlock Text="Sugar level" 
                               Margin="0,0,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" 
                                 Text="110" 
                                 Padding="5,3"/>
                        <TextBlock Grid.Column="1" 
                                   Text="mg/dL" 
                                   VerticalAlignment="Center" 
                                   Margin="5,0,0,0"/>
                    </Grid>
                </StackPanel>
            </Grid>
            
            <!-- Fourth Row: Height -->
            <Grid Margin="0,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Height -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Height" 
                               Margin="0,0,0,5"/>
                    <TextBox Text="6'1" 
                             Padding="5,3"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Border>
</Window>
