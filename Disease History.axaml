<Window x:Class="WpfApp3.DiseaseHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="Disease History" Height="500" Width="600">
    
    <Border Background="#E6F7FF" 
            BorderBrush="#A0CFEF" 
            BorderThickness="2" 
            CornerRadius="8" 
            Padding="20" 
            Width="500"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
        <StackPanel>
            <!-- Title -->
            <TextBlock Text="Disease History" 
                       FontWeight="Bold" 
                       FontSize="20"
                       Margin="0,0,0,20"/>
            
            <!-- Surgery Question -->
            <StackPanel Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" 
                               Text="Have you ever had surgery?" 
                               VerticalAlignment="Center"/>
                    
                    <!-- Yes Radio Button -->
                    <StackPanel Grid.Column="1" 
                                Orientation="Horizontal" 
                                Margin="10,0,0,0">
                        <RadioButton VerticalAlignment="Center"/>
                        <TextBlock Text="Yes" 
                                   Margin="5,0,0,0" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- No Radio Button -->
                    <StackPanel Grid.Column="2" 
                                Orientation="Horizontal" 
                                Margin="10,0,0,0">
                        <RadioButton VerticalAlignment="Center"/>
                        <TextBlock Text="No" 
                                   Margin="5,0,0,0" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
                
                <!-- If yes please list section -->
                <TextBlock Text="If yes please list:" 
                           Margin="0,10,0,5"/>
                
                <!-- First surgery row -->
                <Grid Margin="0,5,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" 
                               Text="Type:" 
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" 
                             Margin="5,0,10,0" 
                             BorderBrush="#A0CFEF"/>
                    <TextBlock Grid.Column="2" 
                               Text="Year:" 
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Column="3" 
                             Margin="5,0,0,0" 
                             BorderBrush="#A0CFEF"/>
                </Grid>
                
                <!-- Second surgery row -->
                <Grid Margin="0,5,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" 
                               Text="Type:" 
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" 
                             Margin="5,0,10,0" 
                             BorderBrush="#A0CFEF"/>
                    <TextBlock Grid.Column="2" 
                               Text="Year:" 
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Column="3" 
                             Margin="5,0,0,0" 
                             BorderBrush="#A0CFEF"/>
                </Grid>
                
                <!-- Third surgery row -->
                <Grid Margin="0,5,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" 
                               Text="Type:" 
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" 
                             Margin="5,0,10,0" 
                             BorderBrush="#A0CFEF"/>
                    <TextBlock Grid.Column="2" 
                               Text="Year:" 
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Column="3" 
                             Margin="5,0,0,0" 
                             BorderBrush="#A0CFEF"/>
                </Grid>
            </StackPanel>
            
            <!-- Radiation Question -->
            <Grid Margin="0,10,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="Have you ever had External Beam Neck Radiation?" 
                           VerticalAlignment="Center"/>
                
                <!-- Yes Radio Button -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            Margin="10,0,0,0">
                    <RadioButton VerticalAlignment="Center"/>
                    <TextBlock Text="Yes" 
                               Margin="5,0,0,0" 
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- No Radio Button -->
                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal" 
                            Margin="10,0,0,0">
                    <RadioButton VerticalAlignment="Center"/>
                    <TextBlock Text="No" 
                               Margin="5,0,0,0" 
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
            
            <!-- Other Major Disease -->
            <StackPanel Margin="0,10,0,0">
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" 
                               Text="Other Major Disease:" 
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" 
                             Margin="10,0,10,0" 
                             BorderBrush="#A0CFEF"/>
                    <TextBlock Grid.Column="2" 
                               Text="Date:" 
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Column="3" 
                             Margin="10,0,0,0" 
                             BorderBrush="#A0CFEF"/>
                </Grid>
                
                <!-- Additional disease lines -->
                <TextBox Margin="0,5,0,5" 
                         BorderBrush="#A0CFEF"/>
                <TextBox Margin="0,5,0,5" 
                         BorderBrush="#A0CFEF"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
